@model Project_DC.Models.ServicesGroup

@{
    ViewData["Title"] = "Delete";
}


<h3>Вы действительно хотите удалить?</h3>
<div>
    <h4>Группа</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           Наименование
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GroupName)
