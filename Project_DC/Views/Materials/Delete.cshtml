@model Project_DC.Models.Materials

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Вы действительно хотите удалить?</h3>
<div>
    <h4>Materials</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Наименование
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Количество
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.count)
        </dd>
        <dt class = "col-sm-2">
           Цена
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.price)
        </dd>
        <dt class = "col-sm-2">
            Сумма
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.summ_price)
        </dd>
        <dt class = "col-sm-2">
           Единица измерения
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Units.UnitsId)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="MaterialId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Назад</a>
    </form>
</div>
