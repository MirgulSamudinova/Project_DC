@model Project_DC.Models.Services

@{
    ViewData["Title"] = "Details";
}



<div>
    <h4>Услуга</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Наименование
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ServiceName)
        </dd>
        <dt class = "col-sm-2">
           Цена
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.price)
        </dd>
        <dt class = "col-sm-2">
            Тип услуги
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.typeService)
        </dd>
        <dt class = "col-sm-2">
           Группа
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ServicesGroup.IdGroup)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.IdService">Редактировать</a> |
    <a asp-action="Index">Назад</a>
</div>
