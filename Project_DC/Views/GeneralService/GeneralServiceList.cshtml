@model IEnumerable<Project_DC.Models.GeneralService>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DentalServiceId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item._DentalService.NameOfService)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <button value="@item.Id" class="EditGeneralService">Edit</button> |
                    <button value="@item.Id" class="DetailsGeneralService">Details</button> |
                    <button value="@item.Id" class="DeleteGeneralService">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>
