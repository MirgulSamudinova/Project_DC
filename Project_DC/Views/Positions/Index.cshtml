@model IEnumerable<Project_DC.Models.Positions>

@{
    ViewData["Title"] = "Index";
}

<h1>Должности</h1>

<p>
    <a asp-action="Create">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
              Наименование
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.position)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id_position">Редактировать</a> |
                <a asp-action="Details" asp-route-id="@item.Id_position">Детали</a> |
                <a asp-action="Delete" asp-route-id="@item.Id_position">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
