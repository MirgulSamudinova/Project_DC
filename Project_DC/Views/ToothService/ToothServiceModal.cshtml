@model Project_DC.Models.ToothService
<div class="row">
    <div class="col-md-7">
        <div id="ValidationSummary" class="text-danger"></div>
        <input id="ToothService_Id" type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="ClientsServiceId" />
        <div class="form-group">
            <label asp-for="ClientsToothId" class="control-label"></label>
            <select id="ToothService_ClientsToothId" asp-for="ClientsToothId" class="form-control" asp-items="ViewBag.ClientsToothId"></select>
        </div>
        <div class="form-group">
            <label asp-for="DentalServiceId" class="control-label"></label>
            <select id="ToothService_DentalServiceId" asp-for="DentalServiceId" class="form-control" asp-items="ViewBag.DentalServiceId"></select>
        </div>
        <div class="form-group">
            <label asp-for="Comment" class="control-label"></label>
            <input id="ToothService_Comment" asp-for="Comment" class="form-control" />
            <span asp-validation-for="Comment" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price" class="control-label"></label>
            <input id="ToothService_Price" asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group form-check">
            <label class="form-check-label">
                <input id="ToothService_IsToothStateChange" class="form-check-input" asp-for="IsToothStateChange" /> @Html.DisplayNameFor(model => model.IsToothStateChange)
            </label>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
