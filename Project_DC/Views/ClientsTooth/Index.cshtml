@model IEnumerable<Project_DC.Models.ClientsTooth>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model._Client)
            </th>
            <th>
                @Html.DisplayNameFor(model => model._Tooth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model._ToothState)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item._Client.FIO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item._Tooth.ToothDetails)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item._ToothState.ToothStateName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
