@model Project_DC.Models.ScheduleTemplate

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Вы действительно хотите удалить?</h3>
<div>
    <h4>График работы</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           Сотрудник
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Staffs.FullName)
        </dd>
        <dt class = "col-sm-2">
            День недели
        </dt>
        <dd class = "col-sm-10">
          @Html.DisplayFor(model => model.DaysOfWeek.DaysOfWeekName)
        </dd>
        <dt class = "col-sm-2">
               Время начала рабочего дня
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.withTime)
        </dd>
        <dt class = "col-sm-2">
            Время конца рабочего дня
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ToTime)
        </dd>
    </dl>
    
    <form asp-action="Удалить">
        <input type="hidden" asp-for="TmeplateId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Назад</a>
    </form>
</div>
